
@{
    ViewData["Title"] = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Css {
    <link href="~/css/detail.css" rel="stylesheet" />
      <style>
    .contact-header {
      background-color: #343a40;
      color: white;
      padding: 80px 0;
      text-align: center;
    }
    .contact-form {
      padding: 60px 0;
    }
    .contact-info {
      padding: 40px 0;
    }
  </style>
}

@section Scripts {
    <script src="~/lib/knockout-3.5.1.js"></script>
    <script src="~/lib/knockout-3.5.1.debug.js"></script>
    <script src="~/lib/knockout.mapping-latest.js"></script>
    <script src="~/js/cart.js"></script>
 
    <script src="/js/active.js"></script>



}
 <header class="contact-header mt-[120px]">
    <div class="container">
      <h1 class="display-4" style="color:white">Liên hệ với Ngọc Quách Gia</h1>
      <p>Chúng tôi luôn sẵn sàng lắng nghe và hỗ trợ bạn</p>
    </div>
  </header>

  <section class="contact-form container">
    <div class="container">
      <form>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="name">Họ và tên</label>
            <input type="text" class="form-control" id="name" placeholder="Nhập họ tên">
          </div>
          <div class="form-group col-md-6">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" placeholder="Nhập email">
          </div>
        </div>
        <div class="form-group">
          <label for="subject">Tiêu đề</label>
          <input type="text" class="form-control" id="subject" placeholder="Nhập tiêu đề">
        </div>
        <div class="form-group">
          <label for="message">Nội dung</label>
          <textarea class="form-control" id="message" rows="5" placeholder="Nhập nội dung tin nhắn"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Gửi tin nhắn</button>
      </form>
    </div>
  </section>

  <section class="contact-info bg-light">
    <div class="container">
      <h3 class="text-center mb-4">Thông tin liên hệ</h3>
      <p class="text-center">Địa chỉ: 123 Đường Đá Quý, Quận Tinh Hoa, TP. HCM</p>
      <p class="text-center">Email: lienhe@ngocquachgia.vn | Hotline: 0909 123 456</p>
      <p class="text-center">Giờ làm việc: Thứ 2 - Thứ 7: 8h00 - 18h00</p>
    </div>
  </section>