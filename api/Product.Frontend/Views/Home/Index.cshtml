@{
    ViewData["Title"] = "Ngọc Quách Gia - Chuyên Gia Về Ngọc";
    ViewData["Image"] = ViewBag.Image;
    ViewData["Description"] = "Ngọc Quách Gia - Chuyên Gia Về Ngọc";
}
@using Project.ViewModels.Products
@model Project.ViewModels.PagedResult<ProductViewModel>

<section id="billboard" class="overflow-hidden">

    <button class="button-prev">
        <i class="icon icon-chevron-left"></i>
    </button>
    <button class="button-next">
        <i class="icon icon-chevron-right"></i>
    </button>
    <div class="swiper main-swiper">
        <div class="swiper-wrapper">
            @foreach(var b in ViewBag.Banners)
            {
                string imageUrl = ViewBag.DomainApi + b.Url;
                <div class="swiper-slide" style="background-image: url('@imageUrl');background-repeat: no-repeat;background-size: cover;background-position: center;">
                    <div class="banner-content">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-6">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
           
           
        </div>
    </div>
</section>
@{
    int count = 1;
}

<section id="featured-products" class="product-store padding-large">
    <div class="container">
        <div class="section-header d-flex flex-wrap align-items-center justify-content-between">
            <h2 class="section-title">Sản phẩm nổi bật</h2>
            <div class="btn-wrap">
                <a href="/san-pham/tat-ca" class="d-flex align-items-center">Xem tất cả sản phảm <i class="icon icon icon-arrow-io"></i></a>
            </div>
        </div>
        <div class="swiper product-swiper overflow-hidden">
            <div class="swiper-wrapper">
                @foreach (var product in ViewBag.ProductHots)
                {
                    var images = product.Images as List<Project.ViewModels.Images.ImageViewModel>;
                        <div class="swiper-slide">
                            <div class="product-item">
                                <div class="image-holder">
                                @if (images != null && images.Any())
                                {
                                    @foreach (var image in product.Images)
                                    {
                                        string imageUrl = ViewBag.DomainApi + image.ImagePath;
                                        <img src="@imageUrl" alt="@product.Title" class="product-image">

                                    }
                                }
                                else
                                {
                                    <img src="/images//default-thumbnail-400.jpg" alt="@product.Title" class="post-image">
                                }


                                </div>

                                <div class="product-detail">
                                    <h3 class="product-title">
                                        <a href="/san-pham/chi-tiet/@product.Id">@product.Title</a>
                                    </h3>
                                    <div class="item-price text-primary money">@product.SellingPrice</div>
                                </div>
                            </div>
                        </div>


                }

            </div>
        </div>
        <div class="swiper-pagination"></div>
    </div>
</section>


<section id="subscribe">
    <div class="container">
        <div class="row">
            <div class="block-text col-md-6">
                <div class="section-header">
                    <h2 class="section-title">Đăng ký nhận thông báo sản phẩm mới nhất</h2>
                </div>
                <p>Trang sức đá quý tinh xảo, mang đến may mắn và bình an cho cuộc sống của bạn.</p>
            </div>
            <div class="subscribe-content col-md-6">
                <form id="form" class="d-flex justify-content-between">
                    <input type="text" name="email" placeholder="Nhập thông tin địa chỉ email tại đây">
                    <button class="btn btn-dark">Đăng ký ngay</button>
                </form>
            </div>
        </div>
    </div>
</section>

<section id="selling-products" class="product-store bg-light-grey padding-large">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">Sản phẩm bán chạy</h2>
        </div>
        <div class="tab-content">
            <div id="all" data-tab-content class="active">
                <div class="row d-flex flex-wrap">
                    @foreach (var product in Model.Items)
                    {
                        <div class="product-item col-lg-2 col-md-6 col-sm-6">
                            <div class="image-holder">
                                @if (product.Images.Count() > 0)
                                {
                                    @foreach (var image in product.Images)
                                    {
                                        string imageUrl = ViewBag.DomainApi + image.ImagePath;
                                        <img src="@imageUrl" alt="@product.Title" class="product-image">

                                    }
                                }
                                @if (product.Images.Count() == 0)
                                {
                                    <img src="/images//default-thumbnail-400.jpg" alt="Books" class="@product.Title">
                                }

                            </div>

                            <div class="product-detail">
                                <h3 class="product-title">
                                    <a href="/san-pham/chi-tiet/@product.Id">@product.Title</a>
                                </h3>
                                <div class="item-price text-primary money">@product.SellingPrice</div>
                            </div>
                        </div>
                    }

                </div>
            </div>

        </div>
    </div>
</section>

