<section id="flash-sales" class="product-store padding-large">

    <div class="container">
        <div class="section-header">
            <h2 class="section-title">Đang giảm giá</h2>
        </div>
        <div class="swiper product-swiper flash-sales overflow-hidden">

            <div class="swiper-wrapper">
                   @foreach (var product in Model.Items)
                {
                        <div class="swiper-slide">
                            <div class="product-item">
                                @if (product.Images.Count() > 0)
                                {
                                    @foreach (var image in product.Images)
                                    {
                                        string imageUrl = ViewBag.DomainApi + image.ImagePath;
                                        <img src="@imageUrl" alt="@product.Title" class="product-image">

                                    }
                                }
                                @if (product.Images.Count() == 0)
                                {
                                    <img src="/images//default-thumbnail-400.jpg" alt="Books" class="@product.Title">
                                }

                        <div class="cart-concern">
                            <div class="cart-button d-flex justify-content-between align-items-center">
                                <button type="button" class="btn-wrap cart-link d-flex align-items-center">
                                  Thêm giỏ hàng <i class="icon icon-arrow-io"></i>
                                </button>
                                <button type="button" class="view-btn tooltip
                        d-flex">
                                    <i class="icon icon-screen-full"></i>
                                    <span class="tooltip-text">Xem nhanh</span>
                                </button>
                                <button type="button" class="wishlist-btn">
                                    <i class="icon icon-heart"></i>
                                </button>
                            </div>
                        </div>
                                <div class="discount">@product.Discount% </div>
                        <div class="product-detail">
                            <h3 class="product-title">
                                <a href="/san-pham/chi-tiet/@product.Id">@product.Title</a>
                            </h3>
                            <div class="item-price text-primary">
                                    @{
                                        var lastPrice = product.SellingPrice - ((float)product.Discount / 100) * product.SellingPrice;
                                    }
                                    <del class="prev-price money">@product.SellingPrice</del><span class="money">@lastPrice</span>
                            </div>
                        </div>
                    </div>
                </div>
                }
               
            </div>
            <div class="swiper-pagination"></div>

        </div>
    </div>
</section>

